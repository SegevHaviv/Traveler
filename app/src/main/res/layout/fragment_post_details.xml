<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PostDetailsFragment">


    <TextView
        android:id="@+id/post_details_description"
        android:layout_width="382dp"
        android:layout_height="276dp"
        android:layout_marginStart="2dp"
        android:scrollbars="vertical"
        android:textColor="@color/colorLightGray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_details_location" />

    <TextView
        android:id="@+id/post_details_location"
        android:layout_width="360dp"
        android:layout_height="26dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorLightGray"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/post_details_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_details_title" />

    <TextView
        android:id="@+id/post_details_title"
        android:layout_width="380dp"
        android:layout_height="35dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="4dp"
        android:scaleType="fitXY"
        android:textColor="@color/colorOrange"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/post_details_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_details_image" />

    <ImageView
        android:id="@+id/post_details_image"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_report_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>