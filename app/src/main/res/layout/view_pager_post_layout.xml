<?xml version="1.0" encoding="utf-8"?><!-- This linear layout contains a single item displayed in the MainActivity -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_pager_post_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray"
    android:baselineAligned="true"

    android:scaleType="fitXY"
    tools:context="com.example.segev.traveler.MainScreenActivity">

    <TextView
        android:id="@+id/post_layout_title"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorOrange"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:background="@android:drawable/ic_menu_report_image"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/view_pager_post_description"
        android:layout_width="352dp"
        android:layout_height="68dp"
        android:layout_below="@+id/post_layout_title"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:maxHeight="2dp"
        android:ellipsize="end"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>