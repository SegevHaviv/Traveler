<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Fragments.PostNewFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/post_new_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textColorHint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/post_new_images"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_new_location" />

    <EditText
        android:id="@+id/post_new_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Location"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/post_new_description"
        app:layout_constraintEnd_toEndOf="@+id/post_new_title"
        app:layout_constraintStart_toStartOf="@+id/post_new_title"
        app:layout_constraintTop_toBottomOf="@+id/post_new_title" />

    <Button
        android:id="@+id/post_new_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="109dp"
        android:layout_marginStart="110dp"
        android:background="@color/colorOrange"
        android:ems="10"
        android:hint="Upload Images"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/post_new_uploaded_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_new_description" />

    <TextView
        android:id="@+id/newHeadLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:gravity="center_horizontal"
        android:text="Add Post"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/post_new_title"
        app:layout_constraintEnd_toEndOf="@+id/post_new_title"
        app:layout_constraintStart_toStartOf="@+id/post_new_title"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/post_new_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:text="SUBMIT"
        android:textColor="@android:color/black"
        android:background="@color/colorOrange"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_new_uploaded_imageView" />

    <ImageView
        android:id="@+id/post_new_uploaded_imageView"
        android:layout_width="0dp"
        android:layout_height="209dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_report_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_new_images" />

    <EditText
        android:id="@+id/post_new_title"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/post_new_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newHeadLine" />

</android.support.constraint.ConstraintLayout>